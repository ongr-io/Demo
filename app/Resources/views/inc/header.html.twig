<header class="page-header">
    <div class="row">
        <div class="col-sm-4 col-md-4 col-lg-4 page-header-cart-wrapper hidden-xs">
            <div class="page-header-cart topbar-dropdown">
                {{ render(controller('AppBundle:Cart:miniCart')) }}
            </div>
        </div>
        <div class="visible-xs page-header-sign-in">
            {{ 'topbar.sign_in_or_register'|trans({'%sign_in%': '#', '%register%': '#'})|raw }}
        </div>
        <div class="col-sm-4 col-md-4 col-lg-4">
            <div class="page-header-logo">
                {% block head_title %}
                    <a href="{{ path('app_homepage') }}">
                        <img src="{{ asset('images/logo.png') }}" alt="logo" width="109" height="80"/>
                    </a>
                {% endblock %}
            </div>
        </div>
        <div class="col-sm-4 col-md-4 col-lg-4 clearfix">
            <div class="page-header-search">
                {% block search_form %}
                    <form role="search" method="get" action="{{ path('app_search_page') }}">
                        <input type="hidden" name="_locale" value="{{ app.request.locale }}" />
                        <div class="page-header-search-container">
                            <input class="page-header-search-inp" id="search-term" type="text" value="{% if search_value is defined %}{{ search_value }}{% endif %}" name="q" placeholder="{{ 'header.search'|trans }}">
                            <button type="submit" class="page-header-search-btn">
                                <i class="glyphicon glyphicon-search"></i>
                            </button>
                        </div>
                    </form>
                {% endblock %}
            </div>
        </div>
    </div>
</header>
